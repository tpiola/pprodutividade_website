# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# Database Configuration
DATABASE_URL="mysql://user:password@host:3306/database" # (REQUIRED) URL de conex√£o com o banco (DRIZZLE)

# Authentication & Security
JWT_SECRET="uma_chave_secreta_aleatoria" # (REQUIRED) Secret key for JWT token generation - use a strong random string

# Supabase Configuration
SUPABASE_URL="https://xxxx.supabase.co" # URL of your Supabase project
SUPABASE_ANON_KEY="public-anon-key" # Public anonymous key from Supabase

# Built-in Forge API Configuration
BUILT_IN_FORGE_API_URL="https://forge.example.com" # URL for the Forge API
BUILT_IN_FORGE_API_KEY="sua_chave_de_api" # API key for Forge authentication

# Frontend Configuration (VITE_ variables are exposed to the client)
VITE_APP_ID="app_id_frontend" # Application ID for frontend
VITE_OAUTH_PORTAL_URL="https://oauth-portal.example.com" # OAuth portal URL
VITE_ANALYTICS_ENDPOINT="https://analytics.example.com" # Analytics endpoint URL (e.g., Umami)
VITE_ANALYTICS_WEBSITE_ID="umami-website-id" # Website ID for analytics tracking

# OAuth Configuration
OWNER_OPEN_ID="" # Owner's OpenID (optional)
OAUTH_SERVER_URL="" # OAuth server URL (optional)

# Server Configuration
PORT=3000 # Port for the server to listen on
NODE_ENV=development # Environment mode: development or production
